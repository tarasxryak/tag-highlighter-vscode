{
  "name": "todo-highlighter",
  "displayName": "TODO Highlighter",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todo-highlighter.forceUpdate",
        "title": "TODO Highlighter: Force Update Decorations",
        "category": "TODO"
      }
    ],
    "configuration": {
      "title": "TODO Highlighter",
      "properties": {
        "todoHighlighter.todoColor": {
          "type": "string",
          "default": "#ffcc00",
          "description": "Color for TODO comments"
        },
        "todoHighlighter.fixColor": {
          "type": "string", 
          "default": "#ff5555",
          "description": "Color for FIXME/BUG comments"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "typescript": "^5.3.3",
    "vscode-test": "^2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tarasxryak/tag-highlighter-vscode/tree/main"
  }
}